@using WebUI.App_LocalResources
@{
    ViewBag.Title = "Заявки";
}

<!-- TODO Перевести -->

@section breadcrumbs {
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">@GlobalResources.Home</a></li>
        <li class="breadcrumb-item active">Заявки</li>
    </ol>
}

<div class="jumbotron">
    <h3>Заявки</h3>
    <hr/>
    
    <div class="row">
        <div class="col">
            <label for="created-to">C</label>
            <input type="date" id="created-from" class="form-control" placeholder="01.01.2018" data-bind="value: createdFrom"/>
        </div>
        <div class="col">
            <label for="created-from">По</label>
            <input type="date" id="created-to" class="form-control" placeholder="01.01.2018" data-bind="value: createdTo"/>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <label for="mark">Марка автомобиля</label>
            <select id="mark"class="form-control" data-bind="options: marks, optionsValue: 'Id', optionsText: 'Name', value: mark, optionsCaption: 'Выберите марку машины'"></select>
        </div>
    </div>
    
    <hr />
    
    @Html.Partial("_Pagination")
    
    <!-- ko if: applications().length -->
    <!-- ko foreach: applications -->
    <div class="row application-info">
        <div class="col">
            <div>
                <h4>Заявка № <span data-bind="text: $data.Id"></span></h4>
            </div>
            <div>
                Автор заявки:
                <span data-bind="text: $data.ContactName"></span>
            </div>
            <div>
                Машина:
                <span data-bind="text: $data.Car.Mark"></span>
                <span data-bind="text: $data.Car.Model"></span>
                <span data-bind="text: $data.Car.Year"></span>
                <span data-bind="text: $data.Car.EngineCapacity"></span>
                <span data-bind="text: $data.Car.FuelTypeDescription"></span>
            </div>
            <div class="word-wrap">
                Описание работ:
                <span data-bind="text: $data.Description"></span>
            </div>
            <div>
                Дата подачи заявки:
                <span data-bind="text: $data.Created"></span>
            </div>
            <!-- ko if: !$data.OfferId-->
            <div class="row pull-right">
                <button class="btn btn-success" data-toggle="modal" data-target="#create-offer" data-bind="click: $root.saveApplicationId">Отправить предложение</button>
            </div>
            <!-- /ko -->
            <!-- ko if: $data.OfferId-->
            <div class="row pull-right">
                <button class="btn btn-danger" data-bind="click: $root.deleteOffer">Удалить предложение</button>
            </div>
            <!-- /ko -->
        </div>
    </div>
    <!-- /ko -->
    <!-- /ko -->
    <!-- ko if: !applications().length -->
    <div class="text-center">
        <h2>@GlobalResources.NoRecordsFound</h2>
    </div>
    <!-- /ko -->
</div>

<div class="modal fade" id="create-offer" role="dialog">
    <form>
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Добавление предложения</h4>
                    <button type="button" class="close" id="close-button" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col">
                            <label for="offer-price">Цена:</label>
                            <input type="number" id="offer-price" class="form-control" data-bind="value: newOffer.price"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <label for="offer-content">Содержание предложения:</label>
                            <textarea class="form-control" id="offer-content" data-bind="value: newOffer.content"></textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer justify-content-center">
                    <button class="btn btn-success" data-bind="click: sendOffer">Отправить</button>
                    <button class="btn btn-danger" data-dismiss="modal">Отмена</button>
                </div>
            </div>
        </div>
    </form>
</div>

@section scripts {
    @Scripts.Render("~/Scripts/poolVM")
    <script>
        var viewModel = poolVM;
        ko.applyBindings(viewModel);
        $(function() {
            viewModel.init();
        });
    </script>
}