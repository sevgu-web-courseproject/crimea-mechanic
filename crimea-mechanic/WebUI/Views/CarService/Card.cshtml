@using WebUI.App_LocalResources
@{
    ViewBag.Title = "Карточка автосервиса";
}

@section breadcrumbs {
    @if (!User.Identity.IsAuthenticated)
    {
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">@GlobalResources.Home</a></li>
            <li class="breadcrumb-item active">Карточка автосервиса</li>
        </ol>
    }
}

<div class="jumbotron">
    <h3><span>Карточка автосервиса</span></h3>
    <h4>
        <span data-bind="text: model.Name"></span>
        <a class="btn pull-right" href="#" data-toggle="modal" data-target="#myModal">
            <i class="fa fa-cog pull-right"></i>
        </a>
    </h4>
    <hr />

    <div class="row">
        <!-- ko if: model.Id() && model.LogoPhotoId() -->
        <div class="col-3 text-center">
            <img class="car-service-logo" data-bind="attr: {src: window.resource.urls.webApiGetPhotoUrl + '/' + model.Id() + '/' + model.LogoPhotoId() }">
        </div>
        <!-- /ko -->
        <div class="col-9">
            <div>
                Город:
                <span data-bind="text: model.CityName"></span>
            </div>

            <div>
                Адрес автосервиса:
                <span data-bind="text: model.Address"></span>
            </div>
            
            <div>
                Имя менеджера:
                <span data-bind="text: model.ManagerName"></span>
            </div>

            <div>
                E-mail:
                <span data-bind="text: model.Email"></span>
            </div>

            <div>
                Ссылка на страницу сервиса:
                <a data-bind="text: model.Site, attr: {href: model.Site}"></a>
            </div>

            <div>
                Контактные номера:
                <!--ko foreach: model.Phones-->
                <span data-bind="text: $data"></span>
                <!-- /ko -->
            </div>
            <div>
                График работы:
                <span data-bind="text: model.TimetableWorks"></span>
            </div>
        </div>
    </div>
    <br />

    <div class="section">
        <h4>Описание автосервиса</h4>
        <hr />
    </div>
    <!-- ko if: model.PhotosId().length-->
    <div class="row justify-content-center">
        <!-- ko foreach: model.PhotosId-->
        <div class='list-group gallery'>
            <div class='col-3'>
                <div class="thumbnail">
                    <img class="img-responsive car-service-photo" data-bind="attr: {src: window.resource.urls.webApiGetPhotoUrl + '/' + $root.model.Id() + '/' + $data}" />
                    <div class='text-right'>
                    </div>
                </div>
            </div>
        </div>
        <!-- /ko -->
    </div>
    <!-- /ko -->


    <br/>
    <div class="row">
        <div class="col">
            <p data-bind="text: model.About"></p>
        </div>
    </div>

    <br/>

    <!-- ko if: model.Reviews().length-->
    <div class="section">
        <h4>Отзывы пользователей</h4>
        <hr/>
        <br/>
    </div>
    
    <section class="comments">
        <!-- ko foreach: model.Reviews -->
        <article class="comment">
            <a class="comment-img" href="#non">
            </a>
            <div class="comment-body">
                <div class="text">
                    <!-- ko foreach: new Array($data.Mark())-->
                    <i class="fa fa-star"></i>
                    <!-- /ko -->
                </div>
                <div class="text">
                    <p data-bind="text: $data.Review"></p>
                </div>
                <p class="attribution"><span data-bind="text: $data.Author"></span> <span data-bind="text: $data.Created"></span>
                </p>
            </div>
        </article>
        <!-- /ko -->
    </section>
    <!-- /ko -->
</div>

<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Редактирование данных автосервиса</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col">
                        <div>
                            <label>Имя менеджера:</label>
                            <input type="text" class="form-control" id="new-service-name">
                        </div>

                        <div>
                            <label>Город:</label>
                            <input type="text" class="form-control" id="new-service-name">
                        </div>

                        <div>
                            <label>Aдрес:</label>
                            <input type="text" class="form-control" id="new-service-name">
                        </div>

                        <div>
                            <label>Адрес страницы:</label>
                            <input type="text" class="form-control" id="new-service-name">
                        </div>

                        <div>
                            <label>E-mail:</label>
                            <input type="text" class="form-control" id="new-service-name">
                        </div>

                        <div>
                            <label>Контактные номера:</label>
                            <input type="text" class="form-control" id="new-service-name">
                        </div>

                        <div>
                            <label>Перечень работ:</label>
                            <input type="text" class="form-control" id="new-service-name">
                        </div>

                        <div>
                            <label>Обслуживаемые марки автомобилей:</label>
                            <input type="text" class="form-control" id="new-service-name">
                        </div>

                        <div>
                            <label>График работы:</label>
                            <input type="text" class="form-control" id="new-service-name">
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-default" data-dismiss="modal">Отмена</button>
            </div>
        </div>

    </div>
</div>

@section scripts {
    @Scripts.Render("~/Scripts/carServiceCard")
    <script>
        var viewModel = carServiceCardVM;
        $(document).ready(function () {
            $(document).trigger("showLoadingPanel");
            viewModel.model.Id(@ViewBag.Id);
            viewModel.init();
            ko.applyBindings(viewModel);
        });
    </script>
}