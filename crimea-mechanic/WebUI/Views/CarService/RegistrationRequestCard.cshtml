@using WebUI.App_LocalResources

@{
    ViewBag.Title = "Карточка регистрации автосервиса";
}

@section breadcrumbs {
<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">@GlobalResources.Home</a></li>
    <li class="breadcrumb-item"><a href="@Url.Action("RegistrationRequests", "CarService")">Заявки</a></li>
    <li class="breadcrumb-item active">Карточка регистрации автосервиса</li>
</ol>
}

<div class="jumbotron">
    <h3><span>Карточка регистрации автосервиса</span></h3>
    <h4>
        <span data-bind="text: model.Name"></span>
    </h4>
    <div class="pull-right">
        <button class="btn" data-bind="click: approve, visible: model.IsApproveButtonVisible()">Потвердить</button>
        <button class="btn" data-bind="click: reject, visible: model.IsRejectButtonVisible()">Отклонить</button>
    </div>
    <hr />

    <div class="row">
        <!-- ko if: model.Id() && model.LogoPhotoId() -->
        <div class="col-3 text-center">
            <img class="car-service-logo" data-bind="attr: {src: window.resource.urls.webApiGetPhotoUrl + '/' + model.Id() + '/' + model.LogoPhotoId() }">
        </div>
        <!-- /ko -->
        <div class="col-9">
            <div>
                Город:
                <span data-bind="text: model.CityName"></span>
            </div>

            <div>
                Адрес автосервиса:
                <span data-bind="text: model.Address"></span>
            </div>

            <div>
                Имя менеджера:
                <span data-bind="text: model.ManagerName"></span>
            </div>

            <div>
                E-mail:
                <span data-bind="text: model.Email"></span>
            </div>

            <div>
                Ссылка на страницу сервиса:
                <a data-bind="text: model.Site, attr: {href: model.Site}"></a>
            </div>

            <div>
                Контактные номера:
                <!--ko foreach: model.Phones-->
                <span data-bind="text: $data"></span>
                <!-- /ko -->
            </div>
            <div>
                График работы:
                <span data-bind="text: model.TimetableWorks"></span>
            </div>
        </div>
    </div>
    <br />

    <div class="section">
        <h4>Описание автосервиса</h4>
        <hr />
    </div>

    <!-- ko if: model.PhotosId().length-->
    <div class="row justify-content-center">
        <!-- ko foreach: model.PhotosId-->
        <div class='list-group gallery'>
            <div class='col-3'>
                <div class="thumbnail">
                    <img class="img-responsive car-service-photo" data-bind="attr: {src: window.resource.urls.webApiGetPhotoUrl + '/' + $root.model.Id() + '/' + $data}" />
                    <div class='text-right'>
                    </div>
                </div>
            </div>
        </div>
        <!-- /ko -->
    </div>
    <!-- /ko -->

    <br />

    <div class="row">
        <div class="col">
            <p data-bind="text: model.About"></p>
        </div>
    </div>
</div>


@section scripts {
    @Scripts.Render("~/Scripts/registrationRequestCardVM")
    <script>
        var viewModel = registrationRequestCardVM;
        ko.applyBindings(viewModel);
        $(function () {
            viewModel.Id(@ViewBag.Id);
            viewModel.init();
        });
    </script>
}
