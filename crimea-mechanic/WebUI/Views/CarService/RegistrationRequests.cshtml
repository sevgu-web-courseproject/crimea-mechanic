@using WebUI.App_LocalResources
@{
    ViewBag.Title = "Заявки на регистрацию";
}

@section breadcrumbs {
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">@GlobalResources.Home</a></li>
        <li class="breadcrumb-item active">Заявки на регистрацию</li>
    </ol>
}

<div class="jumbotron">
    <h3>Заявки на регистрацию автосервисов</h3>
    <hr />
    <br />

    <!-- ko if: requests() -->
    <div class="row justify-content-center">
        <!-- ko foreach: requests -->
        <div class="card col-4 text-center">
            <!-- ko if: $data.LogoPhotoId-->
            <img class="car-service-logo" data-bind="attr: {src: window.resource.urls.webApiGetPhotoUrl + '/' + $data.Id + '/' + $data.LogoPhotoId }" />
            <!-- /ko -->
            <div>
                <h5 data-bind="text: $data.Name"></h5>
            </div>
            <div>
                <span data-bind="text: $data.CityName"></span>
            </div>
            <div>
                <span class="desc" data-bind="text: $data.Address"></span>
            </div>
            <div>
                <!-- ko foreach: new Array($data.AverageMark)-->
                <i class="fa fa-star"></i>
                <!-- /ko -->
            </div>
            <div>
                <a class="btn btn-warning" data-bind="attr: {href: window.resource.urls.webUiRegistrationRequestCardUrl + '/' + $data.Id}">@GlobalResources.View</a>
            </div>
        </div>
        <!-- /ko -->
    </div>
    <!-- /ko -->
    <!-- ko if: itemsCount() === 0 -->
    <div class="text-center">
        <h2>Записи не найдены</h2>
    </div>
    <!-- /ko -->
</div>

@section scripts {
    @Scripts.Render("~/Scripts/registrationRequestsVM")
    <script>
        var viewModel = registrationRequestsVM;
        ko.applyBindings(viewModel);
        $(function () {
            viewModel.init();
        });
    </script>
}