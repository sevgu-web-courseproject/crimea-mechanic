@using WebUI.App_LocalResources
@{
    ViewBag.Title = "Мой профиль"; <!-- TODO -->
}

@section breadcrumbs {
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">@GlobalResources.Home</a></li>
        <li class="breadcrumb-item active">Мой профиль</li> <!-- TODO -->
    </ol>
}

<div class="jumbotron">
    <div class="row">
        <div class="col">
            <div class="pull-right">
                <button class="btn btn-success" data-toggle="modal" data-target="#edit-profile">@GlobalResources.Edit</button>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            Контактное имя: <!-- TODO -->
            <span data-bind="text: model.Name"></span>
        </div>
    </div>
    <div class="row">
        <div class="col">
            Мобильный номер телефона: <!-- TODO -->
            <span data-bind="text: model.Phone"></span>
        </div>
    </div>
    <div class="row">
        <div class="col">
            Email:
            <span data-bind="text: model.Email"></span>
        </div>
    </div>
    <div class="row">
        <div class="col">
            Дата регистрации: <!-- TODO -->
            <span data-bind="text: model.Created"></span>
        </div>
    </div>
</div>

<div class="modal fade" id="edit-profile" role="dialog">
    <form>
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Редактирование профиля</h4> <!-- TODO -->
                    <button type="button" class="close" id="close-button" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col">
                            <label for="edit-name">Контактное имя:</label> <!-- TODO -->
                            <input type="text" id="edit-name" class="form-control" data-bind="value: editProfile.Name" placeholder="@GlobalResources.SampleName" aria-describedby="name-error"/>
                            <small id="name-error" class="form-text validation-error-text" data-bind="validationMessage: editProfile.Name"></small>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <label for="edit-phone">Мобильный номер телефона:</label> <!-- TODO -->
                            <input type="text" id="edit-phone" class="form-control" data-bind="value: editProfile.Phone" placeholde="+7(999) 999-99-99" aria-describedby="phone-error"/>
                            <small id="phone-error" class="form-text validation-error-text" data-bind="validationMessage: editProfile.Phone"></small>
                        </div>
                    </div>
                </div>
                <div class="modal-footer justify-content-center">
                    <button class="btn btn-success" data-bind="click: sendEditProfile">@GlobalResources.Edit</button>
                    <button class="btn btn-danger" data-dismiss="modal">@GlobalResources.Cancel</button>
                </div>
            </div>
        </div>
    </form>
</div>

@section scripts {
    @Scripts.Render("~/Scripts/profileVM")
    <script>
        var viewModel = profileVM;
        $(function() {
            viewModel.init();
            ko.validation.init({
                insertMessages: false,
                decorateInputElement: true,
                errorElementClass: "is-invalid"
            }, true);
            ko.applyBindings(viewModel);
        });
    </script>
}