@using WebUI.App_LocalResources

@{
    ViewBag.Title = GlobalResources.ClientRegistration;
}

@section breadcrumbs {
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">@GlobalResources.Home</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("SignIn", "Account")">@GlobalResources.Login</a></li>
        <li class="breadcrumb-item active">@GlobalResources.ClientRegistration</li>
    </ol>
}

<div class="jumbotron">
    <h3 aria-describedby="help-block">@GlobalResources.ClientRegistration</h3>
    <small id="help-block" class="form-text text-muted">
        @GlobalResources.RequiredFields
    </small>
    <hr/>
    <br/>

    <form>
        <div class="row justify-content-center">
            <div class="form-group col-5 ">
                <label for="email">@GlobalResources.UserLogin*</label>
                <input type="email" class="form-control" id="email" placeholder="example@example.com" data-bind="value: model.Login" aria-describedby="email-error"/>
                <small id="email-error" class="form-text validation-error-text" data-bind="validationMessage: model.Login"></small>
            </div>

            <div class="form-group col-5">
                <label for="name">@GlobalResources.EnterName*</label>
                <input type="text" class="form-control" id="name" placeholder="@GlobalResources.SampleName" data-bind="value: model.ContactName" aria-describedby="name-error"/>
                <small id="name-error" class="form-text validation-error-text" data-bind="validationMessage: model.ContactName"></small>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="form-group col-5">
                <label for="password">@GlobalResources.EnterPassword*</label>
                <input type="password" class="form-control" id="password" placeholder="123456#a" data-bind="value: model.Password" aria-describedby="password-error"/>
                <small id="password-error" class="form-text validation-error-text" data-bind="validationMessage: model.Password"></small>
            </div>

            <div class="form-group col-5">
                <label for="password-confirmation">@GlobalResources.RepeatPassword*</label>
                <input type="password" class="form-control" id="password-confirmation" placeholder="123456#a" data-bind="value: model.PasswordСonfirmation" aria-describedby="password-confirmation-error"/>
                <small id="password-confirmation-error" class="form-text validation-error-text" data-bind="validationMessage: model.PasswordСonfirmation"></small>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="form-group col-5 ">
                <label for="phone">@GlobalResources.PhoneNumber*</label>
                <input type="text" class="form-control" id="phone" placeholder="+7(999) 999-99-99" data-bind="value: model.Phone" aria-describedby="phone-error"/>
                <small id="phone-error" class="form-text validation-error-text" data-bind="validationMessage: model.Phone"></small>
            </div>
        </div>

        <div class="row justify-content-center items-center">
            <div class="col-10">
                <button class="btn btn-success" data-bind="click: submit">@GlobalResources.RegisterNow</button>
                <button class="btn btn-danger inline" data-bind="click: clearForm">@GlobalResources.ClearForm</button>
            </div>
        </div>
    </form>
</div>

@section scripts {
    @Scripts.Render("~/Scripts/registrationUserVM")
    <script>
        var viewModel = registrationUserVM;
        ko.validation.init({
            insertMessages: false,
            decorateInputElement: true,
            errorElementClass: "is-invalid"
        }, true);
        ko.applyBindings(viewModel);
        viewModel.init();
    </script>
}
