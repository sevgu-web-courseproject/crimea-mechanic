@using WebUI.App_LocalResources
@{
    ViewBag.Title = "Профиль автосервиса"; <!-- TODO -->
}

@section breadcrumbs {
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">@GlobalResources.Home</a></li>
        <li class="breadcrumb-item active">Профиль автосервиса</li> <!-- TODO -->
    </ol>
}

<div class="jumbotron">
    
    <h4 class="inline">
        <span data-bind="text: model.Name"></span>
        <span class="gold">
            <!-- ko foreach: new Array(model.AverageMark())-->
            <i class="fa fa-star"></i>
            <!-- /ko -->
        </span>
    </h4>

    <div class="pull-right">
        <a class="btn btn-success" href="@Url.Action("EditCarService")">Редактировать</a>
    </div>

    <hr/>

    @Html.Partial("../CarService/_CarServiceCard")

</div>

@section scripts {
    @Scripts.Render("~/Scripts/carServiceProfileVM")
    <script>
        var viewModel = carServiceProfileVM;
        $(function() {
            viewModel.init();
            ko.applyBindings(viewModel);
        });
    </script>
}
