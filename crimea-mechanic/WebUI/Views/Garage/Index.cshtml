@using WebUI.App_LocalResources
@{
    ViewBag.Title = "Гараж";
}

@section breadcrumbs {
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">@GlobalResources.Home</a></li>
        <li class="breadcrumb-item active">Гараж</li>
    </ol>
}

<div class="jumbotron">
    <div class="row" >
        <div class="col">
            <h3>Мой гараж</h3>
        </div>
                    
        <div class="col">
            <button class="btn btn-success pull-right" data-toggle="modal" data-target="#myModal" data-bind="click: getMarks">Добавить авто</button>
        </div>
    </div>
    
    <hr />
    
    @Html.Partial("_Pagination")

    <!-- ko if: cars().length -->
    <div class="justify-content-center">
        <!-- ko foreach: cars -->
        <div class="row car-info">
            <div class="align-self-center">
                <i class="fa fa-car"></i>
            </div>
            <div class="col">
                <div class="car-name justify-content-center">
                    <span>Малышка</span>
                </div>
                <div>
                    Марка: <span>Гоночная</span>
                </div>
                <div>
                    Модель: <span>Гоночная</span>
                </div>
                <div>
                    VIN: <span>Четкий</span>
                </div>
                <div>
                    Год выпуска: <span>Не имеет значения</span>
                </div>
                <div>
                    Тип топлива: <span>Метанол</span>
                </div>
                <div>
                    Объем двигателя: <span>Дохуя жрет</span>
                </div>
                <div class="row pull-right">
                    <a class="btn btn-warning">@GlobalResources.View</a>
                </div>
            </div>
        </div>
        <!-- /ko -->
    </div>
    <!-- /ko -->
    <!-- ko if: !cars().length -->
    <div class="text-center">
        <h2>Машины не найдены</h2>
    </div>
    <!-- /ko -->
</div>

<div class="modal fade" id="myModal" role="dialog">
    <form>
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Добавление автомобиля</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col">
                            <div>
                                <label>Имя авто (видно только Вам):</label>
                                <input type="text" class="form-control" data-bind="value: newCar.Name">
                            </div>
                            <div>
                                <label>Марка автомобиля:</label>
                                <input type="text" class="form-control" list="marks" data-bind="value: mark"/>
                                <datalist id="marks" data-bind="foreach: marks">
                                    <option data-bind="value: $data.Name"></option>
                                </datalist>
                            </div>
                            <div>
                                <label>Модель автомобиля:</label>
                                <select class="form-control" data-bind="options: models, optionsValue: 'Id', optionsText: 'Name', value: newCar.ModelId, optionsCaption: 'Выберите модель машины'">
                                </select>
                            </div>
                            <div>
                                <label>VIN:</label>
                                <input type="text" class="form-control"  data-bind="value: newCar.Vin" maxlength="17">
                            </div>
                            <div>
                                <label>Год выпуска:</label>
                                <input type="text" class="form-control" id="car-year" data-bind="value: newCar.Year" maxlength="4">
                            </div>
                            <div>
                                <label>Тип топлива:</label>
                                <select class="form-control" data-bind="options: fuelTypes, optionsValue: 'Id', optionsText: 'Name', value: newCar.FuelType, optionsCaption: 'Выберите тип топлива'">
                                </select>
                            </div>
                            <div>
                                <label>Объем двигателя:</label>
                                <input type="text" class="form-control" id="car-engine-capacity" data-bind="value: newCar.EngineCapacity" maxlength="3">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer justify-content-center">
                    <button type="submit" class="btn btn-success">Добавить авто</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Отмена</button>
                </div>
            </div>
        </div>
    </form>
</div>


@section scripts {
    @Scripts.Render("~/Scripts/garagePageVM")
    <script>
        var viewModel = garagePageVM;
        ko.applyBindings(viewModel);
        $(function() {
            viewModel.init();
        });
    </script>
}