@using WebUI.App_LocalResources
@{
    ViewBag.Title = "Гараж";
}
<!-- TODO перевести станицу-->
@section breadcrumbs {
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">@GlobalResources.Home</a></li>
        <li class="breadcrumb-item active">Гараж</li>
    </ol>
}

<div class="jumbotron">
    <div class="row" >
        <div class="col">
            <h3>Мой гараж</h3>
        </div>
                    
        <div class="col">
            <button class="btn btn-success pull-right" data-toggle="modal" data-target="#myModal" data-bind="click: getMarks">Добавить авто</button>
        </div>
    </div>
    
    <hr />
    
    @Html.Partial("_Pagination")

    <!-- ko if: cars().length -->
    <div class="justify-content-center">
        <!-- ko foreach: cars -->
        <div class="row car-info">
            <div class="align-self-center">
                <i class="fa fa-car"></i>
            </div>
            <div class="col">
                <div class="car-name justify-content-center">
                    <span data-bind="text: $data.Name"></span>
                </div>
                <div>
                    Марка: <span data-bind="text: $data.Mark"></span>
                </div>
                <div>
                    Модель: <span data-bind="text: $data.Model"></span>
                </div>
                <div>
                    VIN: <span data-bind="text: $data.Vin"></span>
                </div>
                <div>
                    Год выпуска: <span data-bind="text: $data.Year"></span>
                </div>
                <div>
                    Тип топлива: <span data-bind="text: $data.FuelTypeDescription"></span>
                </div>
                <div>
                    Объем двигателя: <span data-bind="text: $data.EngineCapacity"></span>
                </div>
                <div class="row pull-right">
                    <a class="btn btn-warning" data-bind="attr: {href: window.resource.urls.webUiUserCarCardUrl + '/' + $data.Id}">@GlobalResources.View</a>
                </div>
            </div>
        </div>
        <!-- /ko -->
    </div>
    <!-- /ko -->
    <!-- ko if: !cars().length -->
    <div class="text-center">
        <h2>Машины не найдены</h2>
    </div>
    <!-- /ko -->
</div>

<div class="modal fade" id="myModal" role="dialog">
    <form>
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Добавление автомобиля</h4>
                    <button type="button" class="close" id="close-button" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col">
                            <div>
                                <label>Имя авто (видно только Вам):</label>
                                <input type="text" class="form-control" data-bind="value: newCar.Name" aria-describedby="name-error">
                                <small id="name-error" class="form-text validation-error-text" data-bind="validationMessage: newCar.Name"></small>
                            </div>
                            <div>
                                <label>Марка автомобиля:</label>
                                <input type="text" class="form-control" list="marks" data-bind="value: mark"/>
                                <datalist id="marks" data-bind="foreach: marks">
                                    <option data-bind="value: $data.Name"></option>
                                </datalist>
                            </div>
                            <div>
                                <label>Модель автомобиля:</label>
                                <select class="form-control" data-bind="options: models, optionsValue: 'Id', optionsText: 'Name', value: newCar.ModelId, optionsCaption: 'Выберите модель машины'" aria-describedby="model-error">
                                </select>
                                <small id="model-error" class="form-text validation-error-text" data-bind="validationMessage: newCar.ModelId"></small>
                            </div>
                            <div>
                                <label>VIN:</label>
                                <input type="text" class="form-control"  data-bind="value: newCar.Vin" maxlength="17" aria-describedby="vin-error">
                                <small id="vin-error" class="form-text validation-error-text" data-bind="validationMessage: newCar.Vin"></small>
                            </div>
                            <div>
                                <label>Год выпуска:</label>
                                <input type="text" class="form-control" id="car-year" data-bind="value: newCar.Year" maxlength="4" aria-describedby="year-error">
                                <small id="yaer-error" class="form-text validation-error-text" data-bind="validationMessage: newCar.Year"></small>
                            </div>
                            <div>
                                <label>Тип топлива:</label>
                                <select class="form-control" data-bind="options: fuelTypes, optionsValue: 'Id', optionsText: 'Name', value: newCar.FuelType, optionsCaption: 'Выберите тип топлива'" aria-describedby="fuel-type-error">
                                </select>
                                <small id="fuel-type-error" class="form-text validation-error-text" data-bind="validationMessage: newCar.FuelType"></small>
                            </div>
                            <div>
                                <label>Объем двигателя:</label>
                                <input type="text" class="form-control" id="car-engine-capacity" data-bind="value: newCar.EngineCapacity" maxlength="3" aria-describedby="engine-capacity-error">
                                <small id="engine-capacity-error" class="form-text validation-error-text" data-bind="validationMessage: newCar.EngineCapacity"></small>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer justify-content-center">
                    <button class="btn btn-success" data-bind="click: addCar">Добавить авто</button>
                    <button class="btn btn-danger" data-dismiss="modal">Отмена</button>
                </div>
            </div>
        </div>
    </form>
</div>


@section scripts {
    @Scripts.Render("~/Scripts/garagePageVM")
    <script>
        var viewModel = garagePageVM;
        ko.validation.init({
            insertMessages: false,
            decorateInputElement: true,
            errorElementClass: "is-invalid"
        }, true);
        ko.applyBindings(viewModel);
        $(function() {
            viewModel.init();
        });
    </script>
}